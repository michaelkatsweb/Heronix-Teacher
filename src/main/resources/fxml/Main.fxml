<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="mainRoot"
            fx:controller="com.heronix.teacher.ui.controller.MainController"
            prefWidth="1200" prefHeight="800"
            minWidth="800" minHeight="600"
            styleClass="root">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="header-bar" spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>

            <!-- Sidebar Toggle Button -->
            <Button fx:id="sidebarToggleBtn" text="â˜°" onAction="#toggleSidebar"
                    styleClass="button-icon, sidebar-toggle-btn"
                    style="-fx-font-size: 18px; -fx-min-width: 40px; -fx-min-height: 40px;">
                <tooltip>
                    <Tooltip text="Toggle Sidebar"/>
                </tooltip>
            </Button>

            <!-- App Title - responsive: hide subtitle on smaller screens -->
            <VBox alignment="CENTER_LEFT" spacing="0">
                <Label fx:id="appTitleLabel" text="Heronix" styleClass="app-title" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="appSubtitleLabel" text="Teacher Portal" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Teacher Info -->
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="teacherNameLabel" text="Teacher Name" styleClass="text-bold"/>
                <Label fx:id="teacherSubjectLabel" text="Subject Area" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            </VBox>

            <!-- Separator -->
            <Separator orientation="VERTICAL" prefHeight="30"/>

            <!-- Network Status Indicator -->
            <HBox spacing="8" alignment="CENTER">
                <Label fx:id="networkStatusIcon" text="â—" styleClass="success-text" style="-fx-font-size: 14px;"/>
                <Label fx:id="networkStatusLabel" text="Online" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            </HBox>

            <!-- Separator -->
            <Separator orientation="VERTICAL" prefHeight="30"/>

            <!-- Server Connection Status Panel -->
            <HBox spacing="12" alignment="CENTER" style="-fx-padding: 4 8; -fx-background-color: rgba(0,0,0,0.1); -fx-background-radius: 5;">
                <!-- SIS Server Status -->
                <HBox spacing="4" alignment="CENTER">
                    <Label fx:id="sisStatusIcon" text="â—" style="-fx-font-size: 10px; -fx-text-fill: #b9bbbe;">
                        <tooltip><Tooltip text="EduScheduler-Pro SIS Connection"/></tooltip>
                    </Label>
                    <Label text="SIS" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
                </HBox>

                <!-- EdGames Server Status -->
                <HBox spacing="4" alignment="CENTER">
                    <Label fx:id="edgamesStatusIcon" text="â—" style="-fx-font-size: 10px; -fx-text-fill: #b9bbbe;">
                        <tooltip><Tooltip text="EdGames Server Connection"/></tooltip>
                    </Label>
                    <Label text="Games" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
                </HBox>

                <!-- Talk Server Status -->
                <HBox spacing="4" alignment="CENTER">
                    <Label fx:id="talkStatusIcon" text="â—" style="-fx-font-size: 10px; -fx-text-fill: #b9bbbe;">
                        <tooltip><Tooltip text="Heronix-Talk Messaging Server"/></tooltip>
                    </Label>
                    <Label text="Talk" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
                </HBox>
            </HBox>

            <!-- Theme Toggle Button -->
            <Button fx:id="themeToggleBtn" text="ðŸŒ™" onAction="#toggleTheme"
                    styleClass="button-icon"
                    style="-fx-font-size: 16px; -fx-min-width: 40px; -fx-min-height: 40px;">
                <tooltip>
                    <Tooltip text="Toggle Dark/Light Theme"/>
                </tooltip>
            </Button>

            <!-- Settings Button -->
            <Button text="âš™" onAction="#openSettings"
                    styleClass="button-icon"
                    style="-fx-font-size: 16px; -fx-min-width: 40px; -fx-min-height: 40px;">
                <tooltip>
                    <Tooltip text="Settings"/>
                </tooltip>
            </Button>
        </HBox>
    </top>

    <!-- Left Sidebar Navigation - Collapsible -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" spacing="8" prefWidth="220" minWidth="60" style="-fx-padding: 15;">

            <!-- Navigation Buttons with icons that work when collapsed -->
            <Button fx:id="dashboardBtn" text="ðŸ“Š Dashboard" onAction="#showDashboard"
                    styleClass="nav-button, nav-button-active"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="gradebookBtn" text="ðŸ“š Gradebook" onAction="#showGradebook"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="attendanceBtn" text="âœ“ Attendance" onAction="#showAttendance"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="hallpassBtn" text="ðŸŽ« Hall Pass" onAction="#showHallPass"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="clubsBtn" text="ðŸŽ­ Clubs" onAction="#showClubs"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="walletBtn" text="ðŸ’° Class Wallet" onAction="#showWallet"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="commHubBtn" text="ðŸ’¬ H-Talk" onAction="#showCommunicationHub"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="deviceMgmtBtn" text="ðŸ“± Devices" onAction="#showDeviceManagement"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="gameAnalyticsBtn" text="ðŸŽ® Analytics" onAction="#showGameAnalytics"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="codeBreakerBtn" text="ðŸ” Code Breaker" onAction="#showCodeBreaker"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="dismissalBtn" text="ðŸšŒ Dismissal" onAction="#showDismissal"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Button fx:id="pollsBtn" text="ðŸ“Š Polls" onAction="#showPolls"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="42"/>

            <Separator/>

            <!-- Quick Actions Section - collapsible -->
            <VBox fx:id="quickActionsSection" spacing="8">
                <Label fx:id="quickActionsLabel" text="Quick Actions" styleClass="text-secondary" style="-fx-font-size: 11px; -fx-padding: 8 0 4 0;"/>

                <Button fx:id="syncNowBtn" text="ðŸ“¥ Sync" onAction="#syncNow"
                        styleClass="button-primary"
                        maxWidth="Infinity" prefHeight="32"/>

                <Button fx:id="exportBtn" text="ðŸ“¤ Export" onAction="#exportData"
                        styleClass="button-secondary"
                        maxWidth="Infinity" prefHeight="32"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Sync Status at Bottom - collapsible -->
            <VBox fx:id="syncStatusCard" styleClass="card, sync-status-card" spacing="4" style="-fx-padding: 8;">
                <Label fx:id="syncStatusLabel" text="Last Sync" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
                <Label fx:id="lastSyncLabel" text="Never" styleClass="text-bold" style="-fx-font-size: 11px;"/>
            </VBox>

        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Content loaded dynamically -->
        </StackPane>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets top="8" right="20" bottom="8" left="20"/>
            </padding>

            <Label fx:id="statusMessageLabel" text="Ready" styleClass="text-secondary" style="-fx-font-size: 11px;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="pendingSyncLabel" text="Pending: 0" styleClass="text-secondary" style="-fx-font-size: 11px;"/>

            <Separator orientation="VERTICAL" prefHeight="15"/>

            <Label text="v1.0.0" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>
