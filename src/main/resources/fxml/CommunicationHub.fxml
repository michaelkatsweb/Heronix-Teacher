<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.teacher.ui.controller.CommunicationHubController"
            styleClass="content-area">

    <!-- Top: News Ticker Section -->
    <top>
        <VBox styleClass="card" style="-fx-padding: 0;">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 15;">
                <Label text="ðŸ“° Latest News" styleClass="text-bold" style="-fx-font-size: 14px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="â¸" fx:id="pauseNewsBtn" onAction="#handlePauseNews"
                        styleClass="button-secondary" prefWidth="40" prefHeight="30">
                    <tooltip>
                        <Tooltip text="Pause news ticker"/>
                    </tooltip>
                </Button>
            </HBox>

            <!-- Scrolling News Ticker -->
            <ScrollPane fx:id="newsScrollPane"
                       styleClass="news-scroll-pane"
                       fitToHeight="true"
                       vbarPolicy="NEVER"
                       hbarPolicy="NEVER"
                       pannable="false">
                <VBox fx:id="newsTickerContainer" spacing="8" styleClass="news-ticker-container">
                    <!-- News items will be added programmatically -->
                </VBox>
            </ScrollPane>

            <Separator/>
        </VBox>
    </top>

    <!-- Left: User List and Channels -->
    <left>
        <VBox spacing="10" style="-fx-padding: 15; -fx-min-width: 250; -fx-pref-width: 250;">

            <!-- Channels Section -->
            <VBox styleClass="card" spacing="10" style="-fx-padding: 12;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ“¢ Channels" styleClass="text-bold" style="-fx-font-size: 13px;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="+" onAction="#handleAddChannel"
                            styleClass="button-success" prefWidth="30" prefHeight="25" style="-fx-font-size: 14px;">
                        <tooltip>
                            <Tooltip text="Create new channel"/>
                        </tooltip>
                    </Button>
                </HBox>

                <ListView fx:id="channelsList" prefHeight="200" styleClass="channel-list">
                    <placeholder>
                        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20;">
                            <Label text="ðŸ“¢" style="-fx-font-size: 24px;"/>
                            <Label text="No channels yet" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
                        </VBox>
                    </placeholder>
                </ListView>
            </VBox>

            <!-- Users/Members Section -->
            <VBox styleClass="card" spacing="10" VBox.vgrow="ALWAYS" style="-fx-padding: 12;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ‘¥ Online Users" styleClass="text-bold" style="-fx-font-size: 13px;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="onlineCountLabel" text="0" styleClass="success-text" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                </HBox>

                <TextField fx:id="userSearchField" promptText="Search users..." style="-fx-pref-height: 30;"/>

                <ListView fx:id="usersList" VBox.vgrow="ALWAYS" styleClass="user-list">
                    <placeholder>
                        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20;">
                            <Label text="ðŸ‘¤" style="-fx-font-size: 24px;"/>
                            <Label text="No users online" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
                        </VBox>
                    </placeholder>
                </ListView>
            </VBox>

        </VBox>
    </left>

    <!-- Center/Right: Chat Area -->
    <center>
        <VBox spacing="0" style="-fx-padding: 15 15 15 0;">

            <!-- Chat Header -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="card"
                  style="-fx-padding: 12; -fx-background-radius: 8 8 0 0;">
                <Label fx:id="chatTitleLabel" text="ðŸ’¬ General Chat" styleClass="text-bold" style="-fx-font-size: 16px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="chatMemberCountLabel" text="0 members" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
                <Separator orientation="VERTICAL"/>
                <Button text="â„¹" onAction="#handleChatInfo"
                        styleClass="button-secondary" prefWidth="35" prefHeight="30">
                    <tooltip>
                        <Tooltip text="Chat info"/>
                    </tooltip>
                </Button>
                <Button text="âš™" onAction="#handleChatSettings"
                        styleClass="button-secondary" prefWidth="35" prefHeight="30">
                    <tooltip>
                        <Tooltip text="Chat settings"/>
                    </tooltip>
                </Button>
            </HBox>

            <!-- Chat Messages Area -->
            <ScrollPane fx:id="chatScrollPane"
                       VBox.vgrow="ALWAYS"
                       fitToWidth="true"
                       styleClass="chat-scroll-pane"
                       vbarPolicy="AS_NEEDED"
                       hbarPolicy="NEVER">
                <VBox fx:id="chatMessagesContainer" spacing="10" styleClass="chat-messages-container">
                    <!-- Chat messages will be added programmatically -->

                    <!-- Welcome Message -->
                    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 40;">
                        <Label text="ðŸ’¬" style="-fx-font-size: 48px;"/>
                        <Label text="Welcome to Communication Hub" styleClass="text-bold" style="-fx-font-size: 16px;"/>
                        <Label text="Start a conversation by typing a message below"
                               styleClass="text-secondary" style="-fx-font-size: 12px;"/>
                    </VBox>

                </VBox>
            </ScrollPane>

            <!-- Chat Input Area -->
            <HBox spacing="10" styleClass="card"
                  style="-fx-padding: 12; -fx-background-radius: 0 0 8 8;">

                <Button text="ðŸ“Ž" onAction="#handleAttachment"
                        styleClass="button-secondary" prefWidth="40" prefHeight="40">
                    <tooltip>
                        <Tooltip text="Attach file"/>
                    </tooltip>
                </Button>

                <Button text="ðŸ˜Š" onAction="#handleEmoji"
                        styleClass="button-secondary" prefWidth="40" prefHeight="40">
                    <tooltip>
                        <Tooltip text="Insert emoji"/>
                    </tooltip>
                </Button>

                <TextArea fx:id="messageInputArea"
                         promptText="Type your message here..."
                         wrapText="true"
                         prefRowCount="2"
                         HBox.hgrow="ALWAYS"
                         style="-fx-pref-height: 50;"/>

                <Button text="ðŸ“¤ Send" fx:id="sendMessageBtn" onAction="#handleSendMessage"
                        styleClass="button-primary" prefWidth="100" prefHeight="40"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
