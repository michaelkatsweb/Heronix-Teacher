<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.heronix.teacher.ui.controller.ClassWalletController"
      spacing="15" style="-fx-padding: 20;">

    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="ðŸ’° Class Wallet" styleClass="page-title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="âž• New Transaction" fx:id="newTransactionBtn" onAction="#handleNewTransaction"
                styleClass="button-primary" prefHeight="35" prefWidth="150"/>
        <Button text="ðŸ”„ Sync" fx:id="syncBtn" onAction="#handleSync"
                styleClass="button-secondary" prefHeight="35" prefWidth="100"/>
    </HBox>

    <Separator/>

    <!-- Filter Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Filter:" styleClass="text-bold"/>
        <ComboBox fx:id="studentFilterCombo" promptText="All Students" prefWidth="200">
            <tooltip>
                <Tooltip text="Filter by student"/>
            </tooltip>
        </ComboBox>

        <ComboBox fx:id="typeFilterCombo" promptText="All Types" prefWidth="150">
            <tooltip>
                <Tooltip text="Filter by transaction type"/>
            </tooltip>
        </ComboBox>

        <DatePicker fx:id="fromDatePicker" promptText="From Date" prefWidth="140"/>
        <DatePicker fx:id="toDatePicker" promptText="To Date" prefWidth="140"/>

        <Button text="Clear Filters" onAction="#handleClearFilters" styleClass="button-secondary" prefHeight="30"/>

        <Region HBox.hgrow="ALWAYS"/>

        <TextField fx:id="searchField" promptText="Search transactions..." prefWidth="200"/>
    </HBox>

    <!-- Summary Cards -->
    <HBox spacing="15">
        <!-- Total Balance Card -->
        <VBox styleClass="card" spacing="8" HBox.hgrow="ALWAYS" style="-fx-padding: 15;">
            <Label text="Total Balance" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            <Label fx:id="totalBalanceLabel" text="0.00" styleClass="success-text" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="totalStudentsLabel" text="0 students" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
        </VBox>

        <!-- Total Earned Card -->
        <VBox styleClass="card" spacing="8" HBox.hgrow="ALWAYS" style="-fx-padding: 15;">
            <Label text="Total Earned" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            <Label fx:id="totalEarnedLabel" text="0.00" styleClass="success-text" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="All rewards" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
        </VBox>

        <!-- Total Spent Card -->
        <VBox styleClass="card" spacing="8" HBox.hgrow="ALWAYS" style="-fx-padding: 15;">
            <Label text="Total Spent" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            <Label fx:id="totalSpentLabel" text="0.00" styleClass="warning-text" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="All purchases" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
        </VBox>

        <!-- Transaction Count Card -->
        <VBox styleClass="card" spacing="8" HBox.hgrow="ALWAYS" style="-fx-padding: 15;">
            <Label text="Transactions" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            <Label fx:id="transactionCountLabel" text="0" styleClass="text-bold" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="This month" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
        </VBox>
    </HBox>

    <!-- Transactions Table -->
    <VBox VBox.vgrow="ALWAYS" styleClass="card" style="-fx-padding: 0;">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15 15 10 15;">
            <Label text="Recent Transactions" styleClass="text-bold" style="-fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="transactionTotalLabel" text="0 transactions" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
        </HBox>

        <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                <TableColumn fx:id="studentColumn" text="Student" prefWidth="180"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="balanceColumn" text="Balance After" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 40;">
                    <Label text="ðŸ’°" style="-fx-font-size: 48px;"/>
                    <Label text="No transactions yet" styleClass="text-secondary" style="-fx-font-size: 14px;"/>
                    <Label text="Click 'New Transaction' to award or deduct points" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
                </VBox>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="ðŸ“Š View Reports" onAction="#handleViewReports" styleClass="button-secondary" prefHeight="35" prefWidth="130"/>
        <Button text="ðŸ† Top Earners" onAction="#handleTopEarners" styleClass="button-secondary" prefHeight="35" prefWidth="130"/>
        <Button text="ðŸ“¤ Export CSV" onAction="#handleExport" styleClass="button-secondary" prefHeight="35" prefWidth="130"/>
    </HBox>

</VBox>
