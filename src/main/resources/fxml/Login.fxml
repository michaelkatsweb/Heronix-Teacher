<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.teacher.ui.controller.LoginController"
            styleClass="root"
            prefWidth="800" prefHeight="600">

    <stylesheets>
        <String fx:value="/css/light-theme.css"/>
    </stylesheets>

    <!-- Center: Login Form -->
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-container">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Logo/Title Area -->
            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="80" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo-horizontal.png"/>
                    </image>
                </ImageView>
                <Text text="Teacher Portal" styleClass="login-subtitle"/>
            </VBox>

            <!-- Login Form Card -->
            <VBox spacing="20" styleClass="login-card" maxWidth="400">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <!-- Welcome Message -->
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Welcome Back" styleClass="login-welcome"/>
                    <Label text="Please sign in to continue" styleClass="login-subtitle-small"/>
                </VBox>

                <!-- Error Message (Hidden by Default) -->
                <Label fx:id="errorLabel" styleClass="error-message" managed="false" visible="false" wrapText="true"/>

                <!-- Employee ID Field -->
                <VBox spacing="5">
                    <Label text="Employee ID" styleClass="field-label"/>
                    <TextField fx:id="employeeIdField"
                              promptText="Enter your employee ID (e.g., T001)"
                              styleClass="login-field"
                              onAction="#handleLogin"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="5">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField"
                                  promptText="Enter your password"
                                  styleClass="login-field"
                                  onAction="#handleLogin"/>
                </VBox>

                <!-- Remember Me Checkbox -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <CheckBox fx:id="rememberMeCheckbox" text="Remember Me" styleClass="remember-me"/>
                </HBox>

                <!-- Login Button -->
                <Button fx:id="loginButton"
                       text="Sign In"
                       styleClass="login-button, primary-button"
                       onAction="#handleLogin"
                       defaultButton="true"
                       maxWidth="Infinity"/>

                <!-- Forgot Password Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Hyperlink fx:id="forgotPasswordLink"
                              text="Forgot Password?"
                              styleClass="forgot-password-link"
                              onAction="#handleForgotPassword"/>
                </HBox>

            </VBox>

            <!-- Version Info -->
            <VBox alignment="CENTER" spacing="5">
                <padding>
                    <Insets top="20"/>
                </padding>
                <Label text="Version 1.0.0" styleClass="version-label"/>
                <Label text="Â© 2026 Heronix Education Systems LLC" styleClass="copyright-label"/>
            </VBox>

        </VBox>
    </center>

</BorderPane>
