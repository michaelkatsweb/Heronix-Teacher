<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.heronix.teacher.ui.controller.AttendanceController"
      spacing="20" styleClass="content-pane">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox spacing="5">
            <Label text="Period Attendance" styleClass="page-title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="dateLabel" text="Today" styleClass="text-secondary"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Date Picker -->
        <VBox spacing="5" alignment="CENTER_RIGHT">
            <Label text="Select Date" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            <DatePicker fx:id="datePicker" prefWidth="150"/>
        </VBox>

        <!-- Quick Actions -->
        <Button text="Export All Periods" onAction="#exportAttendance"
                styleClass="button-secondary" prefHeight="40" prefWidth="150"/>
    </HBox>

    <!-- Period Tabs - Dynamically created in controller -->
    <TabPane fx:id="periodTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE"/>

    <!-- Bottom Status Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label fx:id="statusLabel" text="Ready" styleClass="text-secondary" style="-fx-font-size: 11px;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label fx:id="summaryLabel" text="Select a period to view attendance"
               styleClass="text-secondary" style="-fx-font-size: 11px;"/>
    </HBox>

</VBox>
