<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="mainRoot"
            fx:controller="com.heronix.teacher.ui.controller.MainController"
            prefWidth="1200" prefHeight="800"
            styleClass="root">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="header-bar" spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <!-- App Title -->
            <Label text="Welcome to EduSchedulerPro - Teacher Portal" styleClass="app-title" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Teacher Info -->
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="teacherNameLabel" text="Teacher Name" styleClass="text-bold"/>
                <Label fx:id="teacherSubjectLabel" text="Subject Area" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            </VBox>

            <!-- Separator -->
            <Separator orientation="VERTICAL" prefHeight="30"/>

            <!-- Network Status Indicator -->
            <HBox spacing="8" alignment="CENTER">
                <Label fx:id="networkStatusIcon" text="â—" styleClass="success-text" style="-fx-font-size: 14px;"/>
                <Label fx:id="networkStatusLabel" text="Online" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
            </HBox>

            <!-- Theme Toggle Button -->
            <Button fx:id="themeToggleBtn" text="ðŸŒ™" onAction="#toggleTheme"
                    styleClass="button-icon"
                    style="-fx-font-size: 16px; -fx-min-width: 40px; -fx-min-height: 40px;">
                <tooltip>
                    <Tooltip text="Toggle Dark/Light Theme"/>
                </tooltip>
            </Button>

            <!-- Settings Button -->
            <Button text="âš™" onAction="#openSettings"
                    styleClass="button-icon"
                    style="-fx-font-size: 16px; -fx-min-width: 40px; -fx-min-height: 40px;">
                <tooltip>
                    <Tooltip text="Settings"/>
                </tooltip>
            </Button>
        </HBox>
    </top>

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="200" style="-fx-padding: 20;">

            <!-- Navigation Buttons -->
            <Button fx:id="dashboardBtn" text="ðŸ“Š Dashboard" onAction="#showDashboard"
                    styleClass="nav-button, nav-button-active"
                    maxWidth="Infinity" prefHeight="45"/>

            <Button fx:id="gradebookBtn" text="ðŸ“š Gradebook" onAction="#showGradebook"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="45"/>

            <Button fx:id="attendanceBtn" text="âœ“ Attendance" onAction="#showAttendance"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="45"/>

            <Button fx:id="hallpassBtn" text="ðŸŽ« Hall Pass" onAction="#showHallPass"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="45"/>

            <Button fx:id="clubsBtn" text="ðŸŽ­ Clubs" onAction="#showClubs"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="45"/>

            <Button fx:id="walletBtn" text="ðŸ’° Class Wallet" onAction="#showWallet"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="45"/>

            <Button fx:id="commHubBtn" text="ðŸ’¬ Communication Hub" onAction="#showCommunicationHub"
                    styleClass="nav-button"
                    maxWidth="Infinity" prefHeight="45"/>

            <Separator/>

            <!-- Quick Actions -->
            <Label text="Quick Actions" styleClass="text-secondary" style="-fx-font-size: 11px; -fx-padding: 10 0 5 0;"/>

            <Button text="ðŸ“¥ Sync Now" onAction="#syncNow"
                    styleClass="button-primary"
                    maxWidth="Infinity" prefHeight="35"/>

            <Button text="ðŸ“¤ Export Data" onAction="#exportData"
                    styleClass="button-secondary"
                    maxWidth="Infinity" prefHeight="35"/>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Sync Status at Bottom -->
            <VBox styleClass="card" spacing="5" style="-fx-padding: 10;">
                <Label text="Last Sync" styleClass="text-secondary" style="-fx-font-size: 10px;"/>
                <Label fx:id="lastSyncLabel" text="Never" styleClass="text-bold" style="-fx-font-size: 11px;"/>
            </VBox>

        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Content loaded dynamically -->
        </StackPane>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets top="8" right="20" bottom="8" left="20"/>
            </padding>

            <Label fx:id="statusMessageLabel" text="Ready" styleClass="text-secondary" style="-fx-font-size: 11px;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="pendingSyncLabel" text="Pending: 0" styleClass="text-secondary" style="-fx-font-size: 11px;"/>

            <Separator orientation="VERTICAL" prefHeight="15"/>

            <Label text="v1.0.0" styleClass="text-secondary" style="-fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>
